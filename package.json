{
  "name": "react-godot-shader-preview",
  "version": "0.5.0",
  "description": "React component for live Godot shader preview via WebAssembly. Load shader code, switch mesh (sphere/plane), edit uniforms and samplers.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "default": "./dist/style.css"
    }
  },
  "files": ["dist", "godot"],
  "scripts": {
    "build": "tsc && node scripts/copy-css.mjs",
    "prepublishOnly": "yarn build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "~5.9.0"
  },
  "keywords": ["godot", "shader", "gdshader", "webgl", "webassembly", "react", "preview"],
  "author": "Daniil Pshegorlisnkii (https://github.com/nnoxnnox)",
  "license": "MIT",
  "repository": { "type": "git", "url": "https://github.com/nnoxnnox/react-godot-shader-preview" }
}
